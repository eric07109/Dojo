<% unless user == related_user or user.friend_with?(related_user) %>
	<% if related_user.friends_to_be_approved.include?(user) %>
		<%= button_to "Request Sent", {}, disabled: true, class: 'btn btn-light btn-sm' %>
	<% elsif related_user.friends_to_approve.include?(user)%>
		<span class="btn btn-success btn-sm accept-invitation button-<%= user.id %>">Accept Invitation</span>
	<% else %>
		<%= button_to "Add Friend", friendships_path(receiver_id: user), method: :post, class: 'btn btn-light btn-sm' %>
	<% end %>
<% end %>