<div class="container">
	<div class="row user_profile">
		<div class="col-md-12">
			<%= form_with model: @user, method: :patch do |f| %>
				<div class="form-group">
					<h4><%= @user.firstname%> <%= @user.lastname%></h4>
				</div>
				<div class="form-group">
					<%= image_tag @user.avatar.url, size: "100x100", class: "d-block" %>
					<%= f.file_field :avatar %>
				</div>
				<div class="form-group">
					<%= f.label :description %>
					<%= f.text_area(:description, :class => "user-profile-description") %>
				</div>
				<div class="form-group">
					<%= f.submit class: 'btn btn-info btn-sm' %>
				</div>
			<% end %>
		</div>
	</div>
</div>