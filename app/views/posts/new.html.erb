<%= form_for @post do |post| %>
	<%= post.label :title %>
	<%= post.text_field :title %>

	<%= post.label :content, "Post Content" %>
	<%= post.text_area :content %>

	All <%= post.check_box :privacy, {}, "all", nil%>
	Friend <%= post.check_box :privacy, {}, "friend", nil%>
	Myself <%= post.check_box :privacy, {}, "myself", nil%>

	<%= post.submit "Save Draft" %>
	<%= post.submit %>
<% end %>