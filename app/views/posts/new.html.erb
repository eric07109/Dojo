<%= form_for @post do |post| %>
	<%= post.label :title %>
	<%= post.text_field :title %>

	<%= post.label :content, "Post Content" %>
	<%= post.text_area :content %>

	All <%= post.radio_button :privacy, "all" %>
	Friend <%= post.radio_button :privacy, "friend" %>
	Myself <%= post.radio_button :privacy, "myself" %>
	
	Category: <%= collection_check_boxes :category, :id, @categories, :id, :name%>
	
	<%= post.label :attachment %><br />
    <%= post.file_field :attachment %>

	<%= post.submit "Save Draft" %>
	<%= post.submit %>
<% end %>
